<!DOCTYPE html>
<html lang="pt-br">

<head>

    <% const pageStyles = ["asideRegisters.css", "updateFormStyle.css", "modalAuthenticateDelete.css"] %> 

    <%- include("../components/Page-Head.ejs", {title: "AniJogos - Atualizar dados", styles: pageStyles}) %>

</head>
<body style="background-color: cornsilk">
    <div id="update-delete-data">
        <header>
            <a href="/registers/update"> &lt; </a>
            <h1>Atualizar Dados de Jogos</h1>
        </header>
        
            <% dataResult.forEach(dataResult=> { %>

                <main>
                    <form action="/registers/update/games/<%= dataResult.id %> " method="post">
                    <fieldset>
                        <legend><h2>Insira os novos Dados</h2></legend>
                        <div id="form-content-update">
                            <div class="input-group">
                                <label for="games-id">Id</label>
                                <input type="text" name="games-id" id="games-id" disabled value="<%= dataResult.id %>">
                            </div>

                            <div class="input-group">
                                <label for="game-name">Nome:</label>
                                <input type="text" name="game-name" id="game-name" value="<%=dataResult.name %>">
                            </div>

                            <div class="input-group">
                                <label for="game-link">Link:</label>
                                <input type="text" name="game-link" id="game-link" value="<%= dataResult.link %>">
                            </div>

                            <div class="input-group">
                                <label for="game-image">Imagem:</label>
                                <input type="text" name="game-image" id="game-image" value="<%= dataResult.image %>">
                            </div>

                            <div id="button-group">
                                <button type="submit" id="update-confirm-button">Confirmar</button>
                                <button type="reset" class="clear">Limpar Alterações feitas</button>
                            </div>
                        </div>
                    </fieldset>
                    </form>
        
                <aside>
                    <div>
                        <header>
                            <h2>Deletar Jogo!</h2>
                        </header>
                        <div id="delete-image-button">
                            <img src="<%= dataResult.image %> " alt="Imagem não disponivel!">
                            <button type="submit" onclick="Modal.open()" id="open-modal-delete-button">Deletar</button>
                        </div>
                    </div>
                </aside>
                </main>

                <%- include("../components/Page-modal-Delete.ejs", {router: "games", id: dataResult.id }) %> 

                <% }) %>
        
    </div>
</body>

</html>