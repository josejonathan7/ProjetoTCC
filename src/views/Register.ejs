<!DOCTYPE html>
<html>
<head>

    <%- include("./components/Page-Head.ejs", { title: "Cadastrar novos registros no banco de dados!" }) %> 

</head>
<body>

    <%- include("./components/Page-Nav.ejs") %> 
    <div id="content">
     
        <%- include("./components/Page-Aside-Registers.ejs") %> 

        <main id="main-form">
            <div>
                <!--Cadastrar novos animes-->
                <form action="/registers/animes" method="post" class="form-group">
                    <fieldset>
                        <legend>Cadastrar novo Anime</legend>

                        <div class="input-group">
                            <label for="anime-name">Nome:</label>
                            <input type="text" name="anime-name" id="anime-name" >
                        </div>

                        <div class="input-group">
                            <label for="anime-link">Link:</label>
                            <input type="text" name="anime-link" id="anime-link" >
                        </div>

                        <div class="input-group">
                            <label for="anime-image">Endereço da foto no projeto:</label>
                            <input type="text" name="anime-image" id="anime-image" >
                        </div>

                        <div id="button-group">
                            <button type="submit" class="confirm">Confirmar</button>
                            <button type="reset" class="cancel">Cancelar</button>
                        </div>
                    </fieldset>
                </form>
            
                <!--Cadstrar novos jogos-->
                <form action="/registers/games" method="post" class="form-group">
                    <fieldset>
                        <legend>Cadastrar novo Jogo</legend>

                        <div class="input-group">
                            <label for="games-name">Nome:</label>
                            <input type="text" name="games-name" id="games-name" >
                        </div>

                        <div class="input-group">
                            <label for="games-link">Link:</label>
                            <input type="text" name="games-link" id="games-link" >
                        </div>

                        <div class="input-group">
                            <label for="games-image">Endereço da foto no projeto:</label>
                            <input type="text" name="games-image" id="games-image" >
                        </div>
            
                        <div id="button-group">
                            <button type="submit" class="confirm">Confirmar</button>
                            <button type="reset" class="cancel">Cancelar</button>
                        </div>
                    </fieldset>
                </form>
            </div>
            
            <div>      
                <!--Cadastrar novo contato-->
                <form action="/registers/contacts" method="post" class="form-group">
                    <fieldset>
                        <legend>Cadastrar novo Contato</legend>

                        <div class="input-group">
                            <label for="contact-name">Nome:</label>
                            <input type="text" name="contact-name" id="contact-name" >
                        </div>

                        <div class="input-group">
                            <label for="contact-link">Link:</label>
                            <input type="text" name="contact-link" id="contact-link" >
                        </div>
                        
                        
                        <div class="input-group">
                            <label for="contact-description">Descrição:</label>
                            <input type="text" name="contact-description" id="contact-description" >
                        </div>

                        <div id="button-group">
                            <button type="submit" class="confirm">Confirmar</button>
                            <button type="reset" class="cancel">Cancelar</button>
                        </div>
                    </fieldset>
                </form>
                    
                <!--Cadstrar novo usuario-->
                <form action="/registers/users" method="post" class="form-group">
                    <fieldset>
                        <legend>Cadastrar novo usuario</legend>

                        <div class="input-group">
                            <label for="user-name">Nome:</label>
                            <input type="text" name="user-name" id="user-name" >
                        </div>

                        <div class="input-group">
                            <label for="user-password">Senha:</label>
                            <input type="password" name="user-password" id="user-password" >
                        </div>
                        
                        
                        <div class="input-group">
                            <label for="avatar">Avatar:</label>
                            <input type="text" name="avatar" id="avatar" >
                        </div>
                        
                        <div class="input-group">
                            <label for="email-contact-link">Link para contato, rede social:</label>
                            <input type="text" name="email-contact-link" id="email-contact-link" >
                        </div>


                        <div id="button-group">
                            <button type="submit" class="confirm">Confirmar</button>
                            <button type="reset" class="cancel">Cancelar</button>
                        </div>
                    </fieldset>
                </form>     
            </div>

            <div>
                <!--Cadastrar novo site-->
                <form action="/registers/sites" method="post" class="form-group">
                    <fieldset>
                        <legend>Cadastrar novo Site</legend>

                        <div class="input-group">
                            <label for="site-name">Nome:</label>
                            <input type="text" name="site-name" id="site-name" >
                        </div>

                        <div class="input-group">
                            <label for="site-link">Link:</label>
                            <input type="text" name="site-link" id="site-link" >
                        </div>
                        
                        <div id="button-group">
                            <button type="submit" class="confirm">Confirmar</button>
                            <button type="reset" class="cancel">Cancelar</button>
                        </div>
                    </fieldset>
                </form>

                <!--Cadastrar novas musicas-->
                <form action="/registers/songs" method="post" class="form-group">
                    <fieldset>
                        <legend>Cadastrar nova Musica</legend>

                        <div class="input-group">
                            <label for="song-name">Nome:</label>
                            <input type="text" name="song-name" id="song-name" >
                        </div>

                        <div class="input-group">
                            <label for="song-link">Link:</label>
                            <input type="text" name="song-link" id="song-link" >
                        </div>
                        
                        <div id="button-group">
                            <button type="submit" class="confirm">Confirmar</button>
                            <button type="reset" class="cancel">Cancelar</button>
                        </div>
                    </fieldset>
                </form>
            </div>

            <div id="observation-form">
                <form action="/registers/observations" method="post" class="form-group">
                    <fieldset>
                        <legend>Cadastrar nova informação/observação</legend>
                            <div class="input-group">
                                <label for="observation-name">Nome para identificação da observação:</label>
                                <input type="text" name="observation-name" id="observation-name">
                            </div>

                            <div class="input-group">
                                <label for="information">Observação:</label>
                                <textarea name="information" id="information" cols="30" rows="10" class="form-control"></textarea>
                            </div>
                            <div id="button-group">
                                <button type="submit" class="confirm">Confirmar</button>
                                <button type="reset" class="cancel">Cancelar</button>
                            </div>
                    
                    </fieldset>
                </form>
            </div>
        </main>
    </div>
</body>
</html>