<!DOCTYPE html>
<html lang="pt-br">
<head>
	<%- include("./components/Page-Head.ejs", {title: "AniJogos - Animes"}) %> 
</head>
<body>
	<!--Menu de navegação-->
	<%- include("./components/Page-Nav.ejs") %> 
	
	<div class="container-fluid">
		<header>
			<h1>Lista de Animes:</h1>
		</header>
		<br>
		<!-- Paginação -->
		
		<%- include("./components/Page-Pagination.ejs", {numberOfPages: numberOfPages, current: current}) %>
		



		<main>

			<div class="row">

				<% dataAnimesLimit.forEach(dataAnimesLimit=> { %>

					<div class="col-sm-4">
						<div class="card-content">

							<img src="<%= dataAnimesLimit.image %>" class="card-img-top">
							<div class="card-footer">
								<a href="<%= dataAnimesLimit.link %>" target="_blank" tabindex="7">
									<%= dataAnimesLimit.name %>
								</a>
							</div>

						</div>
					</div>

				<% }) %>

			</div>


		</main>
		<br>
		<!-- Paginação -->
		
	<%- include("./components/Page-Pagination.ejs", {numberOfPages: numberOfPages, current: current}) %>
		
		<!-- Observação -->
		<%- include("./components/Page-Note.ejs")  %> 
	</div>

	<!--Rodapé-->
	<%- include("./components/Page-Footer.ejs") %> 
</body>
</html>
