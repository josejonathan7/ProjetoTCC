<!DOCTYPE html>
<html lang="pt-br">
<head>

	<% const pageStyles = ["modalAuthenticateDelete.css", "card-Animes-Games.css", "cardFooter.css", "cardNote.css",  "nav.css"] %> 

	<%- include("./components/Page-Head.ejs", { title: "AniJogos - Games", styles: pageStyles }) %> 

</head>
<body>
	<!-- Menu de navegação -->
	
	<%- include("./components/Page-Nav.ejs") %> 

	<div class="container-fluid">
		<header>
			<h1>Lista de jogos clássicos:</h1>
		</header>
		<br>
		<!-- Paginação -->
		
		<%- include("./components/Page-Pagination.ejs", {numberOfPages: numberOfPages, current: current}) %>
		
		<!--Conteúdo principal / cards de jogos-->

		<main>
		
			<div class="row">

				<% let tabIndexGames = 7; dataGamesLimit.forEach(dataGamesLimit=> { %>

					<div class="col-sm-4">
						<div class="card-content">

							<img src="<%= dataGamesLimit.image %>" class="card-img-top">
							<div class="card-footer">
								<a href="<%= dataGamesLimit.link %>" target="_blank" tabindex="<%= tabIndexGames %>">
									<%= dataGamesLimit.name %>
								</a>
							</div>

						</div>
					</div>

					<% tabIndexGames++; %> 

				<% }) %>

			</div>
		</main>

		<!-- Paginação -->
		
		<%- include("./components/Page-Pagination.ejs", {numberOfPages: numberOfPages, current: current}) %>
		
	</div>

	<!--Rodapé-->
	
	<%- include("./components/Page-Footer.ejs", { contacts: contactUsers}) %> 

	
</body>
</html>