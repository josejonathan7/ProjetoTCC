<footer>
    <div class="card">
        <div class="card-header">
            <h3 class="footer-header">Informações para contato:</h3>
        </div>
        <div class="card-body">

            <% contacts.forEach(contacts => { %>
    
                <div>
                    <p> Nome para contato: <%= contacts.name %></p>
                    <address>
                        <p><a href="<%= contacts.email_contact_link %>" target="_blank" tabindex="90"> <%= contacts.description %>  <i class="fa fa-facebook-official icon"></i></a></p>
                    </address>
                </div>
                <div id="user-image">
                    <img src="<%= contacts.avatar %>" alt="Imagem não disponivel">
                </div>

            <% }) %>

        </div>
    </div>
    <br>
</footer>