<footer>
    <div class="card">
        <div class="card-header">
            <h3 class="footer-header">Informações para contato:</h3>
        </div>
        <div class="card-body">

            <% contacts.forEach(contacts => { %>
    
                <p> Nome para contato:<%= contacts.name %></p>
                <address>
                    <p><a href="<%= contacts.link %>" target="_blank" tabindex="90"> <%= contacts.description %>  <i class="fa fa-facebook-official icon"></i></a></p>
                </address>

            <% }) %>

        </div>
    </div>
    <br>
</footer>