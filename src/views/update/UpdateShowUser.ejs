<!DOCTYPE html>
<html lang="pt-br">

<head>

    <%- include("../components/Page-Head.ejs", {title: "AniJogos - Atualizar dados" }) %>

</head>

<body style="background-color: cornsilk">
    <div id="update-anime">
        <header>
            <a href="/registers/update"> &lt; </a>
            <h1>Atualizar Dados</h1>
        </header>
        <main>
            <% dataResult.forEach(dataResult=> { %>

                <form action="/registers/update/users/<%= dataResult.id %> " method="post">
                    <fieldset>
                        <legend>Insira os novos Dados</legend>
                        <div class="input-group">
                            <label for="user-id">Id</label>
                            <input type="text" name="user-id" id="user-id" disabled value="<%= dataResult.id %>">
                        </div>

                        <div class="input-group">
                            <label for="user-name">Nome:</label>
                            <input type="text" name="user-name" id="user-name" value="<%=dataResult.name %>"
                                style="color: black;">
                        </div>

                        <div class="input-group">
                            <label for="avatar">avatar:</label>
                            <input type="text" name="avatar" id="avatar" value="<%= dataResult.avatar%>">
                        </div>

                        <div class="input-group">
                            <label for="email-contact-link">Link da rede social:</label>
                            <input type="text" name="email-contact-link" id="email-contact-link" value="<%= dataResult.email_contact_link%>">
                        </div>

                        <div id="button-group">
                            <button type="submit" class="confirm">Confirmar</button>
                            <button type="reset" class="cancel">Cancelar</button>
                        </div>
                    </fieldset>
                </form>

                <% }) %>
        </main>
    </div>
</body>

</html>