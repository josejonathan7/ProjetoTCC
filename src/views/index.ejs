<!DOCTYPE HTML>
<html lang="pt-br">
<head>

	<%- include("./components/Page-Head.ejs", {title: "AniJogos - Inicio"}) %> 

</head>
<body>

	
	<input type="hidden" name="carousel-anime" id="carousel-anime-0" value="<%= animesArray[0].image%>" title="<%= animesArray[0].link %> " >							
	<input type="hidden" name="carousel-anime" id="carousel-anime-1" value="<%= animesArray[1].image%>" title="<%= animesArray[1].link %> " >
	
	<input type="hidden" name="carousel-anime" id="carousel-anime-2" value="<%= animesArray[2].image%>" title="<%= animesArray[2].link %> " >

	<input type="hidden" name="carousel-anime" id="carousel-anime-3" value="<%= animesArray[3].image%>" title="<%= animesArray[3].link %> " >
	<input type="hidden" name="carousel-anime" id="carousel-anime-4" value="<%= animesArray[4].image%>" title="<%= animesArray[4].link %> " >

	<input type="hidden" name="carousel-anime" id="carousel-game-0" value="<%= gamesArray[0].image%>" title="<%= gamesArray[0].link %> " >							
	<input type="hidden" name="carousel-anime" id="carousel-game-1" value="<%= gamesArray[1].image%>" title="<%= gamesArray[1].link %> " >
	
	<input type="hidden" name="carousel-anime" id="carousel-game-2" value="<%= gamesArray[2].image%>" title="<%= gamesArray[2].link %> " >

	<input type="hidden" name="carousel-anime" id="carousel-game-3" value="<%= gamesArray[3].image%>" title="<%= gamesArray[3].link %> " >
	<input type="hidden" name="carousel-anime" id="carousel-game-4" value="<%= gamesArray[4].image%>" title="<%= gamesArray[4].link %> " >




	<!-- Menu de navegação -->

	<%- include("./components/Page-Nav.ejs") %> 

	<div class="container-fluid">
		<main>
			<!-- Menu Lateral, sites de animes -->
			<aside id="anime-menu">
				<div class="card">
					<div class="card-header">
						<h3>Sites bons para assistir animes</h3>
					</div>
					<div class="card-body">
						
							<a href="https://assistiranimeson.com/" target="_blank" tabindex="5" class="link-margin-aside-animes">Animes ON</a>
							<a href="https://animesonline.cc/tv/" target="_blank" tabindex="6" class="link-margin-aside-animes">Animes Online</a>		
							<a href="https://animesonline.vip/" target="_blank" tabindex="7" class="link-margin-aside-animes">Animes Online Vip</a>		
							<a href="https://animesorion.vip/" target="_blank" tabindex="8" class="link-margin-aside-animes">Animes Orion</a>
					
							<a href="https://www.anitube.site/" target="_blank" tabindex="9" class="link-margin-aside-animes">AniTube</a>
							<a href="https://nowanimes.com/" target="_blank" tabindex="10" class="link-margin-aside-animes">BR animes (Now Animes)</a>
							<a href="https://www.crunchyroll.com/pt-br" target="_blank" tabindex="11" class="link-margin-aside-animes">Crunchyroll</a>
							<a href="https://www.meuanime.com/" target="_blank" tabindex="12" class="link-margin-aside-animes">Meu Anime</a>
					
					</div>
				</div>
			</aside>
			<!--Carousel Animes --->
			<div class="card card-carousel">
				<div class="card-header">
					<h1>Animes em alta no momento</h1>
				</div>
				<div class="card-body" id="animes-image">
					
					<button class="button-slid" onclick="replacementAnimes(-1)"> &lang; </button>

					<div class="border-box-load">
						<div id="box-load-animes">

						</div>
					</div>

					<button class="button-slid"	onclick="replacementAnimes(1)"> &rang; </button>

				</div>
			</div>
			<br>
			<!-- Guia Lateral, sites de jogos -->
			<aside id="games-menu">
				<div class="card">
					<div class="card-header">
						<h3>Sites bons para baixar jogos</h3>
					</div>
					<div class="card-body">
						
							<a href="https://coolrom.com.au/" target="_blank" tabindex="14" class="link-margin-aside-jogos">Cool Rom</a>
							<a href="http://www.emuroms.ch/" target="_blank" tabindex="15" class="link-margin-aside-jogos">Emu Rooms</a>
							<a href="https://www.freeroms.com/" target="_blank" tabindex="16" class="link-margin-aside-jogos">Free Roms</a>
							<a href="https://roms-download.com/" target="_blank" tabindex="17" class="link-margin-aside-jogos">Roms-Download</a>
						
							<a href="https://www.romsgames.net/" target="_blank" tabindex="18" class="link-margin-aside-jogos">Roms Games</a>
							<a href="https://romsmania.cc/" target="_blank" tabindex="19" class="link-margin-aside-jogos">Roma Mania</a>
							<a href="https://www.romsmax.com/snes/" target="_blank" tabindex="20" class="link-margin-aside-jogos">Roms Max</a>	
					
					</div>
				</div>
			</aside>
			<!-- Carousel de Jogos -->
			<div class="card card-carousel">
				<div class="card-header">
					<h1>Jogos clássicos</h1>
				</div>
				<div class="card-body" id="games-image">
					
					<button class="button-slid" onclick="replacementGames(-1)"> &lang; </button>

					<div class="border-box-load">
						<div id="box-load-games">

						</div>
					</div>

					<button class="button-slid"	onclick="replacementGames(1)"> &rang; </button>

				</div>
			</div>
		</main>
		<br>
		<!-- Musicas mais tocadas -->
		<div id="card-music-home">
			<div class="card-header">
				<h1 class="cabecalho-musica-observacao">Músicas mais tocadas</h1>
			</div>
				<div class="card-body">
					<ul>
						<% dataSongs.forEach(song => { %>
						
							<li>
								<a href="<%= song.link %>" target="_blank" tabindex="24" class="link-margin-card-musica"><%= song.name %></a>
							</li>
							<br>

						<% }) %>
						
					</ul>
			</div>		
		</div>
		<br>
		<!-- Quem Somos? E qual o intuito dessa página? -->
		
		<%- include("./components/Page-Note.ejs", {title: "Quem Somos? E qual o intuito dessa página?", observation: dataPageObjective, suggestion: dataSuggestion }) %> 

		<br>
	</div>

	<!--Rodapé-->
	
	<%- include("./components/Page-Footer.ejs",  { contacts: contactUsers}) %> 

</body>
</html>
