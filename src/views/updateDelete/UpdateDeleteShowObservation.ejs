<!DOCTYPE html>
<html lang="pt-br">

<head>

    <%- include("../components/Page-Head.ejs", {title: "AniJogos - Atualizar dados" }) %>

</head>

<body style="background-color: cornsilk">
    <div id="update-delete-data">
        <header>
            <a href="/registers/update"> &lt; </a>
            <h1>Atualizar Dados</h1>
        </header>

        <% dataResult.forEach(dataResult=> { %>

            <main>

                <form action="/registers/update/observations/<%= dataResult.id %> " method="post">
                    <fieldset>
                        <legend>
                            <h2>Insira os novos Dados</h2>
                        </legend>
                        <div id="form-content-update">
                            <div class="input-group">
                                <label for="observation-id">Id</label>
                                <input type="text" name="observation-id" id="observation-id" disabled
                                    value="<%= dataResult.id %>">
                            </div>

                            <div class="input-group">
                                <label for="observation-name">Nome:</label>
                                <input type="text" name="observation-name" id="observation-name"
                                    value="<%=dataResult.name %>">
                            </div>

                            <div class="input-group">
                                <label for="information">Informação:</label>
                                <textarea name="information" id="information" cols="30" rows="10"
                                    value="<%= dataResult.information %>"></textarea>
                            </div>

                            <div id="button-group">
                                <button type="submit" id="update-confirm-button">Confirmar</button>
                                <button type="reset" class="clear">Limpar Alterações feitas</button>
                            </div>
                        </div>
                    </fieldset>
                </form>

                <aside>
                    <div>
                        <header>
                            <h2>Deletar Observação!</h2>
                        </header>
                        <div id="delete-image-button">
                            <button type="submit" onclick="Modal.open()" id="open-modal-delete-button">Deletar</button>
                        </div>
                    </div>
                </aside>

            </main>

            <%- include("../components/Page-modal-Delete.ejs", {router: "observations", id: dataResult.id}) %> 

            <% }) %>

    </div>
</body>

</html>